;; Fine because the relation is duplicated in the same fragment across epochs.
(transaction
  (epoch
    (persistent_writes
      (define
        (fragment :f1
          (def :Adult
            ([x::INT]
             (exists [age::INT]
               (and
                 (atom :person_age x age)
                 (>= age 18)))))))))

  (epoch
    (persistent_writes
      (define
        (fragment :f1
          (def :Adult
            ([x::INT]
             (exists [age::INT]
               (and
                 (atom :person_age x age)
                 (>= age 21))))))))))
