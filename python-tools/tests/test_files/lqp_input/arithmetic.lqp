(transaction
  (epoch
    (writes
      (define
        (fragment :f1
          (def :decimal_64 ([plus::DECIMAL64 minus::DECIMAL64 mult::DECIMAL64 div::DECIMAL64]
            (exists [a::DECIMAL64 b::DECIMAL64]
              (and
                (relatom :dec_64_a a)
                (relatom :dec_64_b b)
                (+ a b plus)
                (- a b minus)
                (* a b mult)
                (/ a b div)))))

          (def :decimal_128 ([plus::DECIMAL128 minus::DECIMAL128 mult::DECIMAL128 div::DECIMAL128]
            (exists [a::DECIMAL128 b::DECIMAL128]
              (and
                (relatom :dec_128_a a)
                (relatom :dec_128_b b)
                (+ a b plus)
                (- a b minus)
                (* a b mult)
                (/ a b div))))))))

    (reads
      (output :dec_64 :decimal_64)
      (output :dec_128 :decimal_128))))
