(transaction
  (epoch
    (writes
      (define
        (fragment :f1
          (def :int ([v::INT]
            (or
              (= v -9223372036854775808)
              (= v 21)
              (= v 0)
              (= v 21)
              (= v 9223372036854775807))))
          (def :int128 ([v::INT128]
            (or
              (= v -170141183460469231731687303715884105728i128)
              (= v -9223372036854775809i128)
              (= v 21i128)
              (= v 0i128)
              (= v 21i128)
              (= v 9223372036854775808i128)
              (= v 170141183460469231731687303715884105727i128))))
          (def :uint128 ([v::UINT128]
            (or
              (= v 0x00000000000000000000000000000000)
              (= v 0x00000000000000000000000000000001)
              (= v 0xffffffffffffffffffffffffffffffff))))
          (def :float ([v::FLOAT]
            (or
              (= v -4.5)
              (= v -4.4)
              (= v 4.4)
              (= v 4.5))))
          (def :date ([v::DATE]
            (or
              (= v (date 1 1 1)) ;; python's smallest possible date
              (= v (date 2024 02 29))
              (= v (date 2025 08 01))
              (= v (date 9999 12 31))))) ;; python's largest possible date
          (def :datetime ([v::DATETIME]
            (or
              (= v (datetime 0001 01 01 00 00 00 000000)) ;; python's smallest possible datetime
              (= v (datetime 2024 02 29 20 03 04 123000))
              (= v (datetime 2025 08 01 20 03 04 123000))
              (= v (datetime 9999 12 31 23 59 59 999000))))) ;; python's largest possible datetime
          (def :dec ([v::(DECIMAL 18 6)]
            (or
              (= v 0.000000d18)
              (= v -123.456789d18)
              (= v 123.456789d18)
              (= v 123456789012.345678d18))))
          (def :str ([v::STRING] (= v "hello")))
          (def :bool ([v::BOOLEAN]
            (or
              (= v true)
              (= v false))))
          (def :missing ([v::MISSING]
              (= missing v))))))

    (reads
      (output :int :int)
      (output :int128 :int128)
      (output :uint128 :uint128)
      (output :float :float)
      (output :dec :dec)
      (output :date :date)
      (output :datetime :datetime)
      (output :str :str)
      (output :bool :bool)
      (output :missing :missing))))
