(transaction
  (epoch
    (local_writes
      (define
        (fragment :f1
          (def :col1
            ([row::INT v::INT]
              (and
                (primitive :rel_primitive_eq row 1)
                (primitive :rel_primitive_eq 2 v))))
          (def :col2
            ([row::INT v::STRING]
              (and
                (primitive :rel_primitive_eq row 1)
                (primitive :rel_primitive_eq v "hello")))))))
    (reads
      (export
        (export_csv_config
          (columns (column 1 "col1name" :col1) (column 2 "col2name" :col2))
          (path "/tmp/hello_lqp.csv")
          (partition_size 10)
          (compression "gzip")
          (quote_char "\"")
          (escape_char "\\"))))))